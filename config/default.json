{
  "mcpServers": {
    "notemcp": {
      "command": "uv",
      "args": ["run", "notemcp"],
      "env": {
        "NOTEMCP_BASE_DIR": "./notebook"
      }
    },
    "yfmcp": {
      "command": "uvx",
      "args": ["yfmcp"]
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Asia/Taipei"]
    }
  }
}
